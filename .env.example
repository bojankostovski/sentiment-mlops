# ============================================
# Sentiment Analysis MLOps - Environment Variables
# ============================================

# Application
APP_ENV=development
APP_NAME=sentiment-analysis
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=models/sentiment_model_best.pt
VOCAB_PATH=data/processed/imdb_processed.pkl
MAX_SEQUENCE_LENGTH=256
BATCH_SIZE=64

# API Server
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5001
MLFLOW_EXPERIMENT_NAME=sentiment-analysis

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Database (if using persistent storage)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=sentiment_db
# DB_USER=sentiment_user
# DB_PASSWORD=CHANGEME

# Training
LEARNING_RATE=0.001
HIDDEN_DIM=256
EMBEDDING_DIM=100
N_LAYERS=2
DROPOUT=0.5
EPOCHS=5

# Kubernetes (for production)
# NAMESPACE=sentiment-analysis
# REPLICAS=2
# CPU_REQUEST=250m
# CPU_LIMIT=1000m
# MEMORY_REQUEST=512Mi
# MEMORY_LIMIT=1Gi

# Cloud Storage (if using)
# AWS_REGION=us-east-1
# S3_BUCKET=sentiment-models
# S3_PREFIX=models/

# Security
# SECRET_KEY=CHANGEME_GENERATE_RANDOM_KEY
# API_KEY=CHANGEME_GENERATE_API_KEY